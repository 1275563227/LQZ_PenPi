<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/user_order"
            android:layout_width="match_parent"
            android:layout_height="140dip"
            android:layout_marginTop="5dip"
            android:orientation="vertical"
            android:paddingBottom="5dip">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dip">

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dip"
                    android:gravity="center_vertical"
                    android:text="我的订单"
                    android:textColor="@color/textColor_black"
                    android:textSize="@dimen/text_size_15sp" />


                <LinearLayout
                    android:id="@+id/user_look_all_order"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Base.TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/all_order_right"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dip"
                        android:paddingLeft="10dip"
                        android:paddingTop="10dip"
                        android:text="查看全部订单"
                        android:textColor="@color/textColor_gray"
                        android:textSize="@dimen/text_size_13sp" />


                    <ImageView
                        android:id="@+id/all_order_right"
                        android:layout_width="25dip"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dip"
                        android:gravity="center"
                        android:paddingBottom="8dip"
                        android:paddingRight="8dip"
                        android:paddingTop="8dip"
                        android:src="@mipmap/ic_arrow_right" />


                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:layout_marginBottom="8dip"
                android:layout_marginTop="5dip"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="-5dip">

                    <FrameLayout
                        android:id="@+id/pay_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="40dip"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="40dip"
                                android:layout_height="40dip"
                                android:src="@mipmap/pay" />


                            <TextView
                                android:id="@+id/pay_order_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="1dip"
                                android:layout_marginTop="5dip"
                                android:text="①"
                                android:textColor="@color/textColor_red"
                                android:textSize="@dimen/text_size_18sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                        </RelativeLayout>


                    </FrameLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待付款"
                        android:textColor="@color/textColor_red"
                        android:textSize="@dimen/text_size_12sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="-5dip">

                    <FrameLayout
                        android:id="@+id/deliver_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="40dip"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="40dip"
                                android:layout_height="40dip"
                                android:src="@mipmap/delivery" />


                            <TextView
                                android:id="@+id/deliver_order_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="1dip"
                                android:layout_marginTop="5dip"
                                android:text="①"
                                android:textColor="@color/textColor_red"
                                android:textSize="@dimen/text_size_18sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                        </RelativeLayout>


                    </FrameLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待送货"
                        android:textColor="@color/textColor_red"
                        android:textSize="@dimen/text_size_12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="-5dip">

                    <FrameLayout
                        android:id="@+id/comment_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="40dip"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="40dip"
                                android:layout_height="40dip"
                                android:src="@mipmap/comment" />


                            <TextView
                                android:id="@+id/comment_order_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="1dip"
                                android:layout_marginTop="5dip"
                                android:text="①"
                                android:textColor="@color/textColor_red"
                                android:textSize="@dimen/text_size_18sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                        </RelativeLayout>


                    </FrameLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待评价"
                        android:textColor="@color/textColor_red"
                        android:textSize="@dimen/text_size_12sp" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:layout_below="@+id/user_order"
            android:layout_marginTop="10dip"
            android:background="@color/milk_white">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_border"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/collect_shopping_icon"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:src="@mipmap/collect_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="信息中心"
                    android:textColor="@color/textColor_black"
                    android:textSize="@dimen/text_size_12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_border"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/trade_success"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:src="@mipmap/trade_success_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="已完成的交易"
                    android:textColor="@color/textColor_black"
                    android:textSize="@dimen/text_size_12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_border"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/custom_service"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:src="@mipmap/custom_service_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="客服中心"
                    android:textColor="@color/textColor_black"
                    android:textSize="@dimen/text_size_12sp" />

            </LinearLayout>


        </TableRow>
    </LinearLayout>


</LinearLayout>